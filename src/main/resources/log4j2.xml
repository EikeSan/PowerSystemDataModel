<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="PowerSystemDataModel" packages="">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %-15C{1}:%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bright, INFO=black, DEBUG=cyan, TRACE=blue}"/>
        </Console>

        <File name="HibernateWeatherAppender" fileName="logs/HibernateWeatherMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="HibernateGridAppender" fileName="logs/HibernateGridMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="HibernateQueryAppender" fileName="logs/HibernateQueryMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="HibernateOutputAppender" fileName="logs/HibernateOutputMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>


        <File name="InfluxDbWeatherAppender" fileName="logs/InfluxDbWeatherMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="InfluxDbOutputAppender" fileName="logs/InfluxDbOutputMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>


        <File name="CouchbaseWeatherAppender" fileName="logs/CouchbaseWeatherMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="CouchbaseGridAppender" fileName="logs/CouchbaseGridMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="CouchbaseQueryAppender" fileName="logs/CouchbaseQueryMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="CouchbaseOutputAppender" fileName="logs/CouchbaseOutputMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>


        <File name="Neo4jGridAppender" fileName="logs/Neo4jGridMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>
        <File name="Neo4jQueryAppender" fileName="logs/Neo4jQueryMetrics.csv">
            <CsvParameterLayout delimiter=";"/>
        </File>


        <RollingFile name="MainLog" fileName="logs/main.log"  filePattern="logs/main.%i.log.gz">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %-15C{1}:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="2" />
        </RollingFile>
        <RollingFile name="VerboseFileLog" fileName="logs/all.log" filePattern="logs/all.%i.log.gz">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %-15C{1}:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="2" />
        </RollingFile>
        <RollingFile name="ErrorFileLog" fileName="logs/error.log" filePattern="logs/error.%i.log.gz">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %-15C{1}:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB" />
            </Policies>
            <DefaultRolloverStrategy max="2" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="Debug">
            <AppenderRef ref="Console" level="WARN"/>
            <AppenderRef ref="VerboseFileLog" />
            <AppenderRef ref="ErrorFileLog" level="WARN"/>
        </Root>

        <Logger name="Main" level="Debug">
            <appender-ref ref="Console"  level="DEBUG"/>
            <AppenderRef ref="MainLog" />
        </Logger>

        <Logger name="org.neo4j.ogm" level="WARN">
            <appender-ref ref="Console"/>
            <AppenderRef ref="MainLog" />
        </Logger>
        
        
        <Logger name="HibernateWeatherLogger" level="Info">
            <appender-ref ref="HibernateWeatherAppender"  level="INFO"/>
        </Logger>
        <Logger name="HibernateGridLogger" level="Info">
            <appender-ref ref="HibernateGridAppender"  level="INFO"/>
        </Logger>
        <Logger name="HibernateQueryLogger" level="Info">
            <appender-ref ref="HibernateQueryAppender"  level="INFO"/>
        </Logger>
        <Logger name = "HibernateOutputLogger" level="Info">
            <appender-ref ref="HibernateOutputAppender" level="INFO"/>
        </Logger>
        
        
        <Logger name="InfluxDbWeatherLogger" level="Info">
            <appender-ref ref="InfluxDbWeatherAppender"  level="INFO"/>
        </Logger>
        <Logger name = "InfluxDbOutputLogger" level="Info">
            <appender-ref ref="InfluxDbOutputAppender" level="INFO"/>
        </Logger>
        
        
        <Logger name="CouchbaseWeatherLogger" level="Info">
            <appender-ref ref="CouchbaseWeatherAppender"  level="INFO"/>
        </Logger>
        <Logger name="CouchbaseGridLogger" level="Info">
            <appender-ref ref="CouchbaseGridAppender"  level="INFO"/>
        </Logger>
        <Logger name="CouchbaseQueryLogger" level="Info">
            <appender-ref ref="CouchbaseQueryAppender"  level="INFO"/>
        </Logger>
        <Logger name = "CouchbaseOutputLogger" level="Info">
            <appender-ref ref="CouchbaseOutputAppender" level="INFO"/>
        </Logger>
        
        
        <Logger name="Neo4jGridLogger" level="Info">
            <appender-ref ref="Neo4jGridAppender"  level="INFO"/>
        </Logger>
        <Logger name="Neo4jQueryLogger" level="Info">
            <appender-ref ref="Neo4jQueryAppender"  level="INFO"/>
        </Logger>
    </Loggers>
</Configuration>