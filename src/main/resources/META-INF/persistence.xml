<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="dataconnector">
<!--        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>-->

        <class>edu.ie3.models.hibernate.input.HibernateWeatherInput</class>
        <class>edu.ie3.models.hibernate.input.HibernateNodeInput</class>
        <class>edu.ie3.models.hibernate.input.HibernateTransformer3WInput</class>
        <class>edu.ie3.models.hibernate.input.HibernateTransformer2WInput</class>
        <class>edu.ie3.models.hibernate.input.HibernateSwitchInput</class>
        <class>edu.ie3.models.hibernate.input.HibernateLineInput</class>
        <class>edu.ie3.models.hibernate.output.HibernateLineResult</class>

        <properties>
        <!-- database connection -->
        <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/projektarbeit" />
        <property name="javax.persistence.jdbc.user" value="postgres" />
        <property name="javax.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisDialect"/>
         <property name="hibernate.globally_quoted_identifiers" value="true"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.c3p0.internal.C3P0ConnectionProvider"/>
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value = "20"/>
            <property name="hibernate.c3p0.acquire_increment" value = "1"/>
            <property name="hibernate.c3p0.idle_test_period" value = "3000"/>
            <property name="hibernate.c3p0.max_statements" value = "50"/>
            <property name="hibernate.c3p0.timeout" value = "1800"/>
            <property name="hibernate.c3p0.preferredTestQuery" value = "select 1;"/>

        </properties>
    </persistence-unit>
</persistence>


